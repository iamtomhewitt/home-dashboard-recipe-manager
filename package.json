{
    "author": "Tom Hewitt",
    "description": "A Node Express app for managing recipes and ingredients for my home dashboard.",
    "homepage": "https://github.com/iamtomhewitt/home-dashboard-recipe-manager#readme",
    "license": "ISC",
    "main": "app.js",
    "name": "home-dashboard-recipe-manager",
    "version": "1.3.4",
    "scripts": {
        "lint": "eslint --ignore-path .gitignore .",
        "lint-fix": "npm run lint -- --fix",
        "pretest": "eslint --ignore-path .gitignore .",
        "release": "github-releaser",
        "start": "node app.js",
        "test": "mocha 'tests/**/*.js' --exit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://iamtomhewitt@github.com/iamtomhewitt/home-dashboard-recipe-manager.git",
        "apiUrl": "https://api.github.com/repos/iamtomhewitt/home-dashboard-recipe-manager"
    },
    "bugs": {
        "url": "https://github.com/iamtomhewitt/home-dashboard-recipe-manager/issues"
    },
    "dependencies": {
        "assert": "^2.0.0",
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-list-endpoints": "^4.0.1",
        "fs": "0.0.1-security",
        "github-releaser": "^1.1.2",
        "minimist": ">=1.2.2",
        "mocha": "^7.1.1",
        "mongodb": "^3.4.1",
        "path": "^0.12.7",
        "supertest": "^4.0.2"
    },
    "engines": {
        "node": "12.14.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "babel-eslint": "^10.1.0",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-node": "^4.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.20.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "husky": "^1.1.2",
        "validate-commit-msg": "^2.14.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}