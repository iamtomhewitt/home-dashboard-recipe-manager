{
    "author": "Tom Hewitt",
    "description": "An app for managing recipes and ingredients for my home dashboard.",
    "homepage": "https://github.com/iamtomhewitt/home-dashboard-recipe-manager#readme",
    "name": "home-dashboard-recipe-manager",
    "version": "2.0.1",
    "scripts": {
        "backend": "cd packages/backend && npm start",
        "bootstrap": "lerna bootstrap",
        "coverage": "lerna run coverage",
        "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
        "frontend": "cd packages/frontend && npm start",
        "heroku-postbuild": "cd packages/frontend && npm install && npm run build && cd ../backend && npm install",
        "lint": "lerna run lint",
        "lint-fix": "lerna run lint-fix",
        "lint-sass": "lerna run lint-sass",
        "release": "github-releaser && lerna version --tag-version-prefix=''",
        "start": "npm run backend",
        "test": "lerna run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://iamtomhewitt@github.com/iamtomhewitt/home-dashboard-recipe-manager.git",
        "apiUrl": "https://api.github.com/repos/iamtomhewitt/home-dashboard-recipe-manager"
    },
    "dependencies": {
        "lerna": "^4.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "concurrently": "^6.3.0",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-node": "^4.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.20.3",
        "eslint-plugin-react-hooks": "^2.5.1",
        "github-releaser": "1.5.1",
        "husky": "^1.1.2",
        "validate-commit-msg": "^2.14.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}