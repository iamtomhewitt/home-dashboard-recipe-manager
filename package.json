{
	"author": "Tom Hewitt",
	"description": "An app for managing recipes and ingredients for my home dashboard.",
	"homepage": "https://github.com/iamtomhewitt/home-dashboard-recipe-manager#readme",
	"name": "home-dashboard-recipe-manager",
	"version": "1.6.4",
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"lint": "lerna run lint",
		"lint-fix": "lerna run lint-fix",
		"release": "github-releaser && lerna version",
		"heroku-postbuild": "cd packages/frontend && npm install && npm run build",
		"frontend": "cd packages/frontend && npm start",
		"backend": "cd packages/backend && npm start",
		"start": "concurrently --kill-others-on-fail \"npm run backend\" \"npm run frontend\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://iamtomhewitt@github.com/iamtomhewitt/home-dashboard-recipe-manager.git",
		"apiUrl": "https://api.github.com/repos/iamtomhewitt/home-dashboard-recipe-manager"
	},
	"dependencies": {
		"concurrently": "^6.3.0",
		"lerna": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-node": "^4.1.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^2.5.1",
		"github-releaser": "1.5.1",
		"husky": "^1.1.2",
		"validate-commit-msg": "^2.14.0"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
